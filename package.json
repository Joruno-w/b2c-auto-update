{
  "name": "dependency-updater",
  "displayName": "Dependency Updater",
  "description": "批量更新项目依赖",
  "version": "0.0.2",
  "publisher": "Joruno-w",
  "icon": "resources/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Joruno-w/b2c-auto-update"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:dependencyUpdaterView",
    "onView:packageInputView",
    "onCommand:dependency-updater.addPackage",
    "onCommand:dependency-updater.editPackage",
    "onCommand:dependency-updater.deletePackage",
    "onCommand:dependency-updater.clearPackages",
    "onCommand:dependency-updater.updateDependencies"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "package": "npm run build && vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "webpack": "5.97.1",
    "webpack-cli": "^5.1.4"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dependency-updater",
          "title": "依赖更新器",
          "icon": "$(package)"
        }
      ]
    },
    "views": {
      "dependency-updater": [
        {
          "id": "packageInputView",
          "name": "包信息",
          "type": "tree"
        },
        {
          "id": "dependencyUpdaterView",
          "name": "项目列表",
          "type": "tree",
          "contextualTitle": "依赖更新工具"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "dependencyUpdaterView",
        "contents": "暂无选中项目。\n[选择文件夹](command:dependency-updater.selectFolder)",
        "when": "!dependency-updater.hasProjects"
      }
    ],
    "commands": [
      {
        "command": "dependency-updater.addPackage",
        "title": "添加包",
        "icon": "$(add)"
      },
      {
        "command": "dependency-updater.editPackage",
        "title": "编辑",
        "icon": "$(edit)"
      },
      {
        "command": "dependency-updater.deletePackage",
        "title": "删除",
        "icon": "$(trash)"
      },
      {
        "command": "dependency-updater.clearPackages",
        "title": "清空包列表",
        "icon": "$(clear-all)"
      },
      {
        "command": "dependency-updater.selectFolder",
        "title": "选择项目文件夹",
        "icon": "$(add)"
      },
      {
        "command": "dependency-updater.clearProjects",
        "title": "清空项目列表",
        "icon": "$(clear-all)"
      },
      {
        "command": "dependency-updater.updateDependencies",
        "title": "更新依赖",
        "icon": "$(sync)"
      },
      {
        "command": "dependency-updater.updateProject",
        "title": "更新此项目",
        "icon": "$(sync)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "dependency-updater.addPackage",
          "when": "view == packageInputView",
          "group": "navigation@1"
        },
        {
          "command": "dependency-updater.clearPackages",
          "when": "view == packageInputView",
          "group": "navigation@2"
        },
        {
          "command": "dependency-updater.selectFolder",
          "when": "view == dependencyUpdaterView",
          "group": "navigation@1"
        },
        {
          "command": "dependency-updater.clearProjects",
          "when": "view == dependencyUpdaterView",
          "group": "navigation@2"
        },
        {
          "command": "dependency-updater.updateDependencies",
          "when": "view == dependencyUpdaterView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "dependency-updater.editPackage",
          "when": "view == packageInputView",
          "group": "inline"
        },
        {
          "command": "dependency-updater.deletePackage",
          "when": "view == packageInputView",
          "group": "inline"
        },
        {
          "command": "dependency-updater.updateProject",
          "when": "view == dependencyUpdaterView",
          "group": "inline"
        }
      ]
    }
  }
}
