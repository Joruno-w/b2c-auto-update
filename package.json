{
  "name": "b2c-auto-update",
  "displayName": "b2c-auto-update",
  "description": "自动更新依赖工具",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Joruno-w/b2c-auto-update"
  },
  "engines": {
    "vscode": "^1.95.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:dependencyUpdaterView",
    "onView:packageInputView",
    "onCommand:dependency-updater.addPackage",
    "onCommand:dependency-updater.editPackage",
    "onCommand:dependency-updater.deletePackage",
    "onCommand:dependency-updater.clearPackages",
    "onCommand:dependency-updater.updateDependencies"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dependency-updater",
          "title": "依赖更新工具",
          "icon": "resources/dependency.svg"
        }
      ]
    },
    "views": {
      "dependency-updater": [
        {
          "id": "packageInputView",
          "name": "包信息",
          "type": "tree"
        },
        {
          "id": "dependencyUpdaterView",
          "name": "项目列表",
          "type": "tree",
          "contextualTitle": "依赖更新工具"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "dependencyUpdaterView",
        "contents": "[更新依赖$(arrow-right)](command:dependency-updater.updateDependencies)\n使用依赖更新工具更新所选项目。",
        "when": "true"
      },
      {
        "view": "dependencyUpdaterView",
        "contents": "暂无选中项目。\n[选择文件夹](command:dependency-updater.selectFolder)",
        "when": "!dependency-updater.hasProjects"
      },
      {
        "view": "dependencyUpdaterView",
        "contents": "[$(sync) 更新所选依赖](command:dependency-updater.updateDependencies)",
        "when": "dependency-updater:hasProjects"
      }
    ],
    "commands": [
      {
        "command": "dependency-updater.addPackage",
        "title": "添加包",
        "icon": "$(add)"
      },
      {
        "command": "dependency-updater.editPackage",
        "title": "编辑",
        "icon": "$(edit)"
      },
      {
        "command": "dependency-updater.deletePackage",
        "title": "删除",
        "icon": "$(trash)"
      },
      {
        "command": "dependency-updater.clearPackages",
        "title": "清空包列表",
        "icon": "$(clear-all)"
      },
      {
        "command": "dependency-updater.selectFolder",
        "title": "选择项目文件夹",
        "icon": "$(add)"
      },
      {
        "command": "dependency-updater.clearProjects",
        "title": "清空项目列表",
        "icon": "$(clear-all)"
      },
      {
        "command": "dependency-updater.updateDependencies",
        "title": "更新依赖",
        "icon": "$(sync)"
      },
      {
        "command": "dependency-updater.updateProject",
        "title": "更新此项目",
        "icon": "$(sync)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "dependency-updater.addPackage",
          "when": "view == packageInputView",
          "group": "navigation@1"
        },
        {
          "command": "dependency-updater.clearPackages",
          "when": "view == packageInputView",
          "group": "navigation@2"
        },
        {
          "command": "dependency-updater.selectFolder",
          "when": "view == dependencyUpdaterView",
          "group": "navigation@1"
        },
        {
          "command": "dependency-updater.clearProjects",
          "when": "view == dependencyUpdaterView",
          "group": "navigation@2"
        },
        {
          "command": "dependency-updater.updateDependencies",
          "when": "view == dependencyUpdaterView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "dependency-updater.editPackage",
          "when": "view == packageInputView",
          "group": "inline"
        },
        {
          "command": "dependency-updater.deletePackage",
          "when": "view == packageInputView",
          "group": "inline"
        },
        {
          "command": "dependency-updater.updateProject",
          "when": "view == dependencyUpdaterView",
          "group": "inline"
        }
      ]
    }
  }
}
